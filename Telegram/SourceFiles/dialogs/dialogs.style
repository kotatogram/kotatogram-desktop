	icon: icon {{ "dialogs/dialogs_cancel_search", dialogsMenuIconFg }};
	iconOver: icon {{ "dialogs/dialogs_cancel_search", dialogsMenuIconFgOver }};
	iconPosition: point(11px, 11px);
